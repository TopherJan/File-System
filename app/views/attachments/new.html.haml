- if !@attachment.errors.empty?
  .alert.alert-error
    %ul
      - @attachment.errors.full_messages.each do |msg|
        %li= msg
.well
  = form_for @attachment, html: { multipart: true } do |f|
    = f.label :name
    = f.text_field :name
    = f.label :attachment
    = f.file_field :attachment
    = f.submit "Save", class: "btn btn-primary"
